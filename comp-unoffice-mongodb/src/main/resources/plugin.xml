<definitions>

  <component category='WRITER'
             id='UnOffice Mongodb Writer'
             inputMessageType='entity'
             inputOutputModelsMatch='false'
             outputMessageType='text'
             supportsMultipleThreads='true'>
    <name>UnOffice Mongodb Writer</name>
    <className>com.unoffice.comp.mongodb.runtime.UnOfficeMongodbWriter</className>
    <keywords>hardcode</keywords>
    <description></description>
    <settings>

      <setting id='host'
               required='true'
               type='text'>
        <name>Host</name>
      </setting>

      <setting id='port'
               required='true'
               type='integer'>
        <name>Port</name>
      </setting>


      <setting id='db'
               required='true'
               type='text'>
        <name>Db</name>
      </setting>


      <setting id='user'
               required='true'
               type='text'>
        <name>User</name>
      </setting>


      <setting id='pwd'
               required='true'
               type='password'>
        <name>Password</name>
      </setting>

      <setting id='collection'
               required='true'
               type='text'>
        <name>Collection</name>
      </setting>

      <setting id='control.message.on.text.send'
               required='false'
               type='boolean'>
        <name>Send Control Message on Text Send</name>
        <defaultValue>false</defaultValue>
      </setting>

      <setting id='run.when'
               required='false'
               type='choice'>
        <name>Run When</name>
        <defaultValue>PER UNIT OF WORK</defaultValue>
        <choices>
          <choice>PER UNIT OF WORK</choice>
          <choice>PER MESSAGE</choice>
        </choices>
      </setting>

      <setting id='rows.per.message'
               required='false'
               type='integer'>
        <name>Rows/Msg</name>
        <defaultValue>1000</defaultValue>
      </setting>
    </settings>
   </component>


</definitions>
